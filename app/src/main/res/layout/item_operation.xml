<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="message"
            type="com.getzuper.challengeforzuper.data.model.MessageFromJS" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:paddingTop="@dimen/_6sdp"
    android:paddingBottom="@dimen/_6sdp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rounded_rect_card"
        android:padding="@dimen/_8sdp"
        >

        <TextView
            android:id="@+id/txt_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{message.id}"
            android:textSize="@dimen/_14ssp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="@+id/progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circle_shape"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            app:setProgress="@{message}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/txt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_10ssp"
            android:textColor="@android:color/black"
            app:setProgressText="@{message}"
            app:layout_constraintStart_toStartOf="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="@+id/progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
</layout>
